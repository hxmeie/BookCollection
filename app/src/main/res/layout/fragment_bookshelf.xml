<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title_bookshelf_frag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_action_bar_height"
        android:background="@color/colorBase">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_bookshelf"
            android:textSize="@dimen/text_size_18"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"/>

        <ImageButton
            android:id="@+id/im_btn_scan"
            android:layout_width="@dimen/btn_height_35"
            android:layout_height="@dimen/btn_height_35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_margin_10"
            android:background="@mipmap/scan_pic"/>
    </RelativeLayout>
