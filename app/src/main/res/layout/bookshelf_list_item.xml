<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_bookshelf_item_bookpic"
        android:layout_width="90dp"
        android:layout_height="120dp"
        tools:src="@mipmap/no_cover"
        android:scaleType="fitCenter"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginLeft="@dimen/base_margin_10"
        android:layout_weight="1"
        android:paddingTop="@dimen/base_padding_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bookshelf_item_bookname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Android开发艺术探索"
            android:textSize="@dimen/text_size_20"/>
        <TextView
            android:id="@+id/tv_bookshelf_item_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/text_size_15"
            android:layout_marginTop="@dimen/base_margin_10"
            android:textColor="@color/bookshelf_item_text_color_1"
            tools:text="《Android开发艺术探索》是一本Android进阶类书籍，采用理论、源码和实践相结合的方式来阐述高水准的Android应用开发要点。"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_10">
            <TextView
                android:id="@+id/tv_bookshelf_item_bookauthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bookshelf_item_text_color_1"
                android:textSize="@dimen/base_margin_15"
                tools:text="任玉刚"/>

            <TextView
                android:id="@+id/tv_book_type_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/base_padding_3"
                android:textColor="@color/bookshelf_item_text_color_1"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_12"
                android:background="@drawable/tag_textview_background"
                tools:text="android"/>

            <TextView
                android:id="@+id/tv_book_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bookshelf_item_text_color_1"
                android:layout_toLeftOf="@id/tv_book_type_1"
                android:layout_marginRight="@dimen/base_margin_10"
                android:background="@drawable/tag_textview_background"
                android:padding="@dimen/base_padding_3"
                android:textSize="@dimen/text_size_12"
                tools:text="计算机"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>