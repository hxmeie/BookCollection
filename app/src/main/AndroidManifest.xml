<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hxm.books">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.hxm.books.activity.ActivitySplash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.BaseActivity"
            android:theme="@style/AnimActivityTheme">
        </activity>

        <activity android:name=".activity.ActivityLogin"
            android:theme="@style/AnimActivityTheme">
        </activity>

        <activity android:name=".activity.ActivityRegister"
            android:theme="@style/AnimActivityTheme">
        </activity>

        <activity android:name=".activity.ActivityBookDetails"
            android:theme="@style/AnimActivityTheme">
        </activity>

        <activity android:name=".activity.ActivityMain"
            android:theme="@style/AnimActivityTheme">
        </activity>

        <activity android:name=".activity.ActivityScan"
            android:theme="@style/AnimActivityTheme">
        </activity>
    </application>

</manifest>
