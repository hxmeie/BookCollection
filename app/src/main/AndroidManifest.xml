<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hxm.books">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/mybooks"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.hxm.books.activity.ActivitySplash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Activity基类-->
        <activity
            android:name=".activity.BaseActivity"
            android:theme="@style/AnimActivityTheme">

        </activity>
        <!-- 登录界面-->
        <activity
            android:name=".activity.ActivityLogin"
            android:theme="@style/AnimActivityTheme">

        </activity>
        <!-- 注册页面-->
        <activity
            android:name=".activity.ActivityRegister"
            android:theme="@style/AnimActivityTheme">

        </activity>
        <!-- 书籍详细信息-->
        <activity
            android:name=".activity.ActivityBookDetails"
            android:theme="@style/AnimActivityTheme">

        </activity>
        <!-- 主页面-->
        <activity
            android:name=".activity.ActivityMain"
            android:theme="@style/AnimActivityTheme">

        </activity>
        <!-- 扫描页面-->
        <activity
            android:name=".activity.ActivityScan"
            android:theme="@style/AnimActivityTheme">

        </activity>
    </application>

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

</manifest>
